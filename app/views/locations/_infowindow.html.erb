<div class="infowindow" align="center">
	<h4> <%= location.get_name %> </h4>
	 <%if @current_dataset%>
	 <p><%= t('list')+ "(#{location.get_works_length_in_ds(@current_dataset)}):"%></p>
	<div class="infobubble">
		<ul>
		<%location.works_in_ds(@current_dataset).each do |work|%>
		<li><%= work.name %></li>
		<% end %>
		</ul>
	</div>
	<%end%>
</div>