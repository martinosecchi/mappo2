<p id="notice"><%= notice %></p>

<p>
  <b>Nome:</b>
  <%= @work.name %>
</p>

<p>
  <b>Data di Inizio:</b>
  <%= @work.start %>
</p>

<p>
  <b>Data di Fine:</b>
  <%= @work.end %>
</p>

<p>
  <b>Luoghi:</b><%=@work.locations.length%>
  <% @work.locations.each do |location| %>
  <p><%=location.name%>, <%=location.country%></p>
  <%end%>
</p>

<%
keys=@work.get_extra_keys
hash=@work.get_extra_hash 
%>
<%if keys%>
<% keys.each do |key| %>
  <b><%= key.capitalize %>: </b>
  <%= hash[key] %>
  <br />
<% end %>
<%end%>

<%= link_to 'Edit', edit_work_path(@work) %> |
<%= link_to 'Back', works_path %>
