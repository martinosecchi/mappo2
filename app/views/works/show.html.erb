<%if notice%>
<div class="alert alert-success" role="alert">
  <p id="notice"><%= notice %></p>
</div>
<%end%>

<div class="bubble" style="width: 60%; text-align:left;"> 
  <div class="container-fluid">
    <h2 align="center"><%= @work.name %></h2>
    <div class="span4">
      <p>
        <b><%= t('start_ext')%>:</b>
        <%= @work.start.strftime("%d/%m/%Y") if @work.start %>
      </p>

      <p>
        <b><%= t('end_ext')%>:</b>
        <%= @work.end.strftime("%d/%m/%Y") if @work.end %>
      </p>
      <div>
        <p>
          <b>Luoghi:</b>(<%=@work.locations.length%>)
          <%= render "/locations/locations_index"%>
          <%
          keys=@work.extra.keys
          hash=@work.extra
          %>
          <%if keys%>
          <% keys.each do |key| %>
          <p>
            <b><%= key.capitalize %>: </b>
            <%= hash[key] %>
          </p>
          <% end %>
          <%end%>
        </div>
      </div><!--span4-->
      <div class="span4"> 
        <div class="map" id="map" style='width: 400px; height: 200px;'></div>
      </div><!--span4-->
    </div><!--container-fluid-->

  </div><!--bubble-->
  <br>
  <%= link_to t('edit'), edit_work_path(@work), :class => "btn" %> |
  <%= link_to t('delete'), @work, method: :delete, data: { confirm: t('sure') }, :class => "btn btn-danger"  %>

  <script type="text/javascript">
  $(document).ready(function(){
    showMap(<%=raw @hash.to_json %>);
  })
  </script>
