<table class="table">
  <tr>
    <th>Name</th>
    <th>N. of Locations</th>
    <th>Start</th>
    <th>End</th>
    <th></th>
    <th></th>
  </tr>

<% @works.each do |work| %>
  <tr>
    <td><%= link_to work.name, work %></td>
    <td><%= work.locations.length %></td>
    <td><%= work.start %></td>
    <td><%= work.end %></td>
    <td><%= link_to '<i class="fa fa-pencil fa-fw"></i>'.html_safe, edit_work_path(work) %></td>
    <td><%= link_to '<i class="fa fa-trash fa-fw"></i>'.html_safe, work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

