<h1>Locations in <%=@dataset.title%></h1>
<br>
<div id='region_chart' style="width: 800px;"></div>
<br>
<div class="container-fluid" style="width: 800px;">
	<div class="span5">
		<div id='pie'></div>
	</div>
	<div class="span2">
		<table class="table">
			<tr>
				<th>Go</th>
				<th>Name</th>
				<th>Country</th>
				<th></th>
				<th></th>
			</tr>
			<% @locations.each do |location| %>
			<tr>
				<td><%= link_to '->', location %></td>
				<td><%= location.name %></td>
				<td><%= location.country %></td>
				<td><%= link_to '/', edit_location_path(location) %></td>
				<td><%= link_to 'x', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>

<%= render_chart @pie_chart, 'pie' %>
<%= render_chart @region_chart, 'region_chart' %>
