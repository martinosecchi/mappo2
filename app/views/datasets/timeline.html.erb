<div style="width: 900px;">
	<h1>Timeline</h1>
	<div id="timeline1"></div>
	<%= render_chart(@chart1, 'timeline1') %>
	

	<br>
	<h3 style="text-align: left;"><%= t 'inline'%>:</h3>
	<div id="timeline2"></div>
	<%= render_chart(@chart2, 'timeline2') %>
	<div class="container-fluid">
		<div class="span5">
			<br>
			<button class="btn embed-button-tl1"><%= t 'embed_timeline'%>1</button>
			<div class="embed-tl1 hidden bubble">
				<p><%= t 'embed_timeline'%>1</p>
				<input id="width_iframe_tl1" placeholder=<%= t 'width'%> style="width: 50px">
				<input id="height_iframe_tl1" placeholder=<%= t 'height'%> style="width: 50px;">
				<br><br><button class="btn btn-primary generate-tl1"><%= t 'generate'%></button>
				<br><br><input class="hidden" id="embed-code-tl1" style="width: 100%;">
			</div>
		</div>
		<div class="span5">
			<br>
			<button class="btn embed-button-tl2"><%= t 'embed_timeline'%>2</button>
			<div class="embed-tl2 hidden bubble">
				<p><%= t 'embed_timeline'%>2</p>
				<input id="width_iframe_tl2" placeholder=<%= t 'width'%> style="width: 50px">
				<input id="height_iframe_tl2" placeholder=<%= t 'height'%> style="width: 50px;">
				<br><br><button class="btn btn-primary generate-tl2"><%= t 'generate'%></button>
				<br><br><input class="hidden" id="embed-code-tl2" style="width: 100%;">
			</div>
		</div>
	</div>
	<br><br>

	<%= render "works/works_index" %>
</div>

<script type="text/javascript">
$(document).ready(function(){
	$('.embed-button-tl1').click(function(){
		$('.embed-button-tl1').hide();
		$('.embed-tl1').show();
	});
	$('.generate-tl1').click(function(){
		$iframe=generate_tl1_iframe()
		$('#embed-code-tl1').val($iframe);
		$('#embed-code-tl1').show();
	});
	$('.embed-button-tl2').click(function(){
		$('.embed-button-tl2').hide();
		$('.embed-tl2').show();
	});
	$('.generate-tl2').click(function(){
		$iframe=generate_tl2_iframe()
		$('#embed-code-tl2').val($iframe);
		$('#embed-code-tl2').show();
	});
})
</script>
